
<% if @foundOffers.any? %>
  <ul>
    <% @foundOffers.each() do |offer| %>
    	<div class="row">
    		<div class="panel panel-default">
  				<div class="panel-body">
    				<div class="col-md-2">
    					<li><%= offer.event.name %></li>
    				</div>
	      		<div class="col-md-2">
	      			<li><%= offer.price %></li>
	      		</div>
	      		<div class="col-md-3">
	        		<li>
	        		<img style="width: 150px;" src="<%= offer.event.imageurl %>">
	        		</li>
	        	</div>
	      		<div class="col-md-2">
	      			<% if offer.buy_sell %>
	      				<li>Sell</li>
	      			<% else %>
	      				<li>Buy</li>
	      			<% end %>
	      		</div>

	        	<div class="col-md-1">
    					<li>
  	  					<form action="/offer" method="post">
  	  						<input type="hidden" name="_method" value="delete">
  	  						<button type="submit" class="btn btn-danger"> Delete
  	  						</button>
  						  </form>
  					  </li>
  				  </div>
            <div class="col-md-1">
    					<li>
  	  					<form action="/viewContact" method="post">
                  <input type="hidden" name="offer_id" value="<%=offer.id%>">
                  <button type="submit" class="btn btn-info">View</button>
  						  </form>
  					  </li>
  				  </div>
      		</div>
      	</div>
      </div>
    <% end %>
  </ul>
<%else%>
  <h2 class="text-center">No search results, please amend your search</h2>
  <a href="/user"><h3 class="text-center">New Search</h3></a>
<%end%>
